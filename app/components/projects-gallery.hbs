<div class="row {{@class}}">
  <div class="col-lg-12">
    <div class="filter-content-2">
      <ul {{filter}} class="filter js-filter">
        <FilterLinks />
      </ul>
    </div>
    <div {{grid}} class="grid-items js-isotope js-grid-items">
      {{#each @projects as |project|}}
        <div class="grid-item {{project.category}} js-isotope-item js-grid-item">
          <LinkTo @route="project" @class="link-arrow" @model={{project}}>
            <div class="project-item item-shadow">
              <img id="preview"
              src="/{{@rootURL}}assets/images/projects/{{project.thumbnailSmall}}" alt="{{project.title}}"
              />
              <div class="project-hover">
                <div class="project-hover-content">
                  <h3 class="project-title">{{project.title}}</h3>
                </div>
              </div>
              <LinkTo @route="project" @class="link-arrow" @model={{project}}>
                See project <i class="icon ion-ios-arrow-right"></i>
              </LinkTo>
            </div>
          </LinkTo>
        </div>
      {{/each}}
    </div>
  </div>
</div>
